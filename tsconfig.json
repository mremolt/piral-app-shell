{
  "compilerOptions": {
    "declaration": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "lib": ["dom", "es2021"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
